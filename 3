public class Main { 
public static void main(String[] args) { 
Rectangle rectangle = new Rectangle(2, 2);
Circle circle = new Circle(1);
Triangle triangle = new Triangle(1, 3, 5);

System.out.println("Площадь круга: " + circle.getSquare());
System.out.println("Периметр прямоугольника: " + rectangle.getPerimeter());
System.out.println("Площадь треугольника: " + triangle.getSquare()); 
} 
}

Класс Rectangle:
public class Rectangle { 
private float a, b;
public Rectangle(float a, float b) { 
if(a <= 0 || b <= 0) throw new RuntimeException("Такой фигуры не сущ");
this.a = a;
this.b = b;
} 
public float getSquare() { return a * b; }
public float getPerimeter() { return (a + b) * 2; }
}




Класс Triangle:
public class Triangle { 
private float a, b, c;
public Triangle(float a, float b, float c) { 
if(a <= 0  b <= 0 c <= 0  a + b <= c a + c <= b || c + b <= a) 
throw new RuntimeException("Такой фигуры не сущ");
this.a = a;
this.b = b;
this.c = c;
} 
public float getSquare() {
float p = getPerimeter() / 2;
return (float)Math.sqrt(p * (p - a) * (p - b) * (p - c));
}
public float getPerimeter() { return a + b + c; }
}






Класс Circle:
public class Circle { 
private final static float PI = 3.1415926;
private float radius;
public Circle(float radius) { 
if(radius <= 0) throw new RuntimeException("Такой фигуры не сущ");
this.radius = radius;
} 
public float getSquare() { return PI * radius * radius; }
}
